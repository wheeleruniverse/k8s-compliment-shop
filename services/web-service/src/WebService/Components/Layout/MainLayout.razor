@inherits LayoutComponentBase

<div class="main-layout">
    <header class="header">
        <div class="header-container">
            <a href="/" class="logo">
                <span class="logo-icon">âœ¨</span>
                <span class="logo-text">Compliment Shop</span>
            </a>
            <nav class="nav-links">
                <a href="/" class="nav-link">Products</a>
            </nav>
        </div>
    </header>

    <main class="main-content">
        @Body
    </main>

    <footer class="footer">
        <div class="footer-container">
            <p class="footer-text">
                &copy; @DateTime.Now.Year Compliment Shop. Made with love and premium compliments.
            </p>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" class="blazor-error-boundary">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>

<style>
    .main-layout {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1400px;
        margin: 0 auto;
        width: 100%;
        padding: 0 2rem;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        text-decoration: none;
        transition: transform var(--transition-fast);
    }

    .logo:hover {
        transform: translateY(-2px);
    }

    .logo-icon {
        font-size: 2rem;
    }

    .logo-text {
        display: inline-block;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
    }

    .nav-link {
        font-size: 1rem;
        font-weight: 500;
        color: var(--text-secondary);
        text-decoration: none;
        transition: color var(--transition-fast);
        position: relative;
    }

    .nav-link:hover {
        color: var(--accent-blue);
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--accent-blue);
        transition: width var(--transition-fast);
    }

    .nav-link:hover::after {
        width: 100%;
    }

    .main-content {
        flex: 1;
        padding: 2rem 0;
    }

    .footer {
        background: var(--glass-bg);
        backdrop-filter: blur(var(--blur-amount));
        -webkit-backdrop-filter: blur(var(--blur-amount));
        border-top: 1px solid var(--glass-border);
        padding: 2rem;
        margin-top: 4rem;
    }

    .footer-container {
        max-width: 1400px;
        margin: 0 auto;
        text-align: center;
    }

    .footer-text {
        color: var(--text-muted);
        margin: 0;
        font-size: 0.875rem;
    }

    #blazor-error-ui {
        display: none;
    }

    #blazor-error-ui.show {
        display: block;
    }

    .reload, .dismiss {
        color: white;
        text-decoration: underline;
        margin-left: 1rem;
    }

    @@media (max-width: 768px) {
        .header-container {
            padding: 0 1rem;
        }

        .logo-text {
            display: none;
        }

        .nav-links {
            gap: 1rem;
        }

        .main-content {
            padding: 1rem 0;
        }
    }
</style>
