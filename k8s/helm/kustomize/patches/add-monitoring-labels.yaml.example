# Example patch: Add monitoring labels to deployments
# To use: rename to .yaml and add to patchesStrategicMerge in kustomization.yaml

apiVersion: apps/v1
kind: Deployment
metadata:
  name: web-service
  labels:
    prometheus.io/scrape: "true"
    prometheus.io/port: "8080"
    prometheus.io/path: "/metrics"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: bff-service
  labels:
    prometheus.io/scrape: "true"
    prometheus.io/port: "8082"
    prometheus.io/path: "/metrics"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: product-service
  labels:
    prometheus.io/scrape: "true"
    prometheus.io/port: "8080"
    prometheus.io/path: "/metrics"
